root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 4

[*.{js,ts,tsx,jsx,json,css,scss}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Dockerfile*]
indent_size = 4

[Makefile]
indent_style = tab

[*.toml]
indent_size = 2
